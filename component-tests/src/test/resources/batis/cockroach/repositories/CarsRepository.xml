<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dercio.database_proxy.repositories.cars.CarsRepository">
    <select id="findById" resultType="com.dercio.database_proxy.repositories.cars.Car">
        SELECT *
        FROM vehicles.cars
        WHERE car_id = #{id}
    </select>
    <insert id="save"
            parameterType="com.dercio.database_proxy.repositories.cars.Car">
        INSERT INTO vehicles.cars(car_id, manufacturer, doors, last_updated)
        VALUES (#{carId}, #{manufacturer}, #{doors}, #{lastUpdated})
    </insert>

    <delete id="deleteById">
        DELETE
        FROM vehicles.cars
        WHERE car_id = #{id}
    </delete>
</mapper>
