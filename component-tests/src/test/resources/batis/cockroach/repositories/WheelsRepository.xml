<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dercio.database_proxy.repositories.wheel.WheelsRepository">
    <select id="findByType" resultType="com.dercio.database_proxy.repositories.wheel.Wheel">
        SELECT *
        FROM vehicles.wheel
        WHERE wheel_type = #{type}
    </select>
    <insert id="save"
            parameterType="com.dercio.database_proxy.repositories.wheel.Wheel">
        INSERT INTO vehicles.wheel(wheel_type)
        VALUES (#{wheelType})
    </insert>

    <delete id="deleteByType">
        DELETE
        FROM vehicles.wheel
        WHERE wheel_type = #{type}
    </delete>
</mapper>
