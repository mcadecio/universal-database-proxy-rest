<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.dercio.database_proxy.budgets.BudgetsRepository">
    <select id="findById" resultType="com.dercio.database_proxy.budgets.Budget">
        SELECT *
        FROM money.budgets
        WHERE id = #{id}
    </select>
    <insert id="save"
            parameterType="com.dercio.database_proxy.budgets.Budget">
        INSERT INTO money.budgets(id,
                                  year,
                                  month,
                                  income,
                                  food,
                                  rent,
                                  savings,
                                  discretionary,
                                  user_id,
                                  created)
        VALUES (#{id},
                #{year},
                #{month},
                #{income},
                #{food},
                #{rent},
                #{savings},
                #{discretionary},
                #{userId},
                #{created})
    </insert>

    <delete id="deleteById">
        DELETE
        FROM money.budgets
        WHERE id = #{id}
    </delete>
</mapper>
